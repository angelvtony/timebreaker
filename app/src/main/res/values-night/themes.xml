<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TimeBreaker" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

        <style name="IOSDialogStyle" parent="ThemeOverlay.Material3.MaterialAlertDialog">
            <item name="colorSurface">@color/white</item>
            <item name="shapeAppearanceCornerMedium">@style/ShapeAppearance.IOSDialog</item>
            <item name="buttonBarPositiveButtonStyle">@style/IOSDialog.PositiveButton</item>
            <item name="buttonBarNegativeButtonStyle">@style/IOSDialog.NegativeButton</item>
        </style>

        <!-- Rounded shape -->
        <style name="ShapeAppearance.IOSDialog" parent="">
            <item name="cornerFamily">rounded</item>
            <item name="cornerSize">16dp</item>
        </style>

        <!-- Buttons styled like iOS -->
        <style name="IOSDialog.PositiveButton" parent="Widget.Material3.Button.TextButton.Dialog">
            <item name="android:textColor">@color/red</item>
            <item name="android:textStyle">bold</item>
        </style>

        <style name="IOSDialog.NegativeButton" parent="Widget.Material3.Button.TextButton.Dialog">
            <item name="android:textColor">@color/black</item>
        </style>

</resources>