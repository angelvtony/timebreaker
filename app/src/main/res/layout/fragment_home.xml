<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:padding="24dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/home_toolbar_menu"
        android:background="#0D0D0D" />

    <TextView
        android:id="@+id/tvStatusTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="65dp"
        android:textSize="28sp"
        app:layout_constraintTop_toBottomOf="@+id/toolBar"
        app:layout_constraintBottom_toTopOf="@+id/tvCurrentTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvCurrentTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12:00:00 PM"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvStatusTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvClockedIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clocked in at 12:01:40 PM"
        android:textColor="#888888"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvCurrentTime"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/tvClockedIn"
        tools:layout_editor_absoluteX="24dp">

        <Button
            android:id="@+id/btnClockOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#8B0000"
            android:paddingVertical="12dp"
            android:text="Clock Out"
            android:textColor="@android:color/white"
            android:visibility="gone"
            app:cornerRadius="24dp" />

        <Button
            android:id="@+id/btnClockIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="#8B0000"
            android:paddingVertical="12dp"
            android:text="Clock In"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp" />

        <Button
            android:id="@+id/btnEndDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="#2C2C2C"
            android:paddingVertical="12dp"
            android:text="End Day"
            android:textColor="@android:color/white"
            app:cornerRadius="24dp" />
    </LinearLayout>

    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:alignmentMode="alignMargins"
        app:columnCount="2"
        app:layout_constraintTop_toBottomOf="@id/buttonLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:rowCount="2"
        app:rowOrderPreserved="false"
        app:useDefaultMargins="true">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_margin="8dp"
            android:clipToOutline="true"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_rowWeight="1">

            <TextView
                android:id="@+id/tvLabelTimeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIME LEFT"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTimeLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="07:59:51"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_margin="8dp"
            app:layout_columnWeight="1">

            <TextView
                android:text="TIME WORKED"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTimeWorked"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:-- --"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_margin="8dp"
            app:layout_columnWeight="1">

            <TextView
                android:text="BREAK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBreak"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:-- --"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#1A1A1A"
            android:padding="16dp"
            android:elevation="4dp"
            android:layout_margin="8dp"
            app:layout_columnWeight="1">

            <TextView
                android:text="LEAVING TIME"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#CCCCCC"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvOvertime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--:-- --"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </androidx.gridlayout.widget.GridLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
